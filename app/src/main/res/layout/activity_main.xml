<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/blue"
            app:titleTextColor="@color/white"/>

    <TextView
        android:id="@+id/signout_tv"
        android:layout_below="@+id/text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="SIGNOUT"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banner"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="389dp"
            android:layout_below="@+id/imageView"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:text="Have too much Stuff? \n Need a better use for your things?"
            android:textSize="25sp"
            android:textColor="@color/purple"/>

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="389dp"
            android:layout_below="@+id/text_view_1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="GO RENT IT!!"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textColor="@color/purple"/>

    <Button
        android:id="@+id/takeOnRent_bn"
        android:layout_below="@+id/text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/blue"
        android:layout_marginTop="16dp"
        android:text="TAKE ON RENT"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/giveOnRent_bn"
        android:layout_below="@+id/takeOnRent_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/blue"
        android:text="GIVE ON RENT"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_alignParentBottom="true"
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/drawer_menu" />
</RelativeLayout>
